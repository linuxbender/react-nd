{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build/dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "build",
    "public",
    "src/setupTests.js",
    "src/registerServiceWorker.js"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  "include": [
    "custom.d.ts",
    "src/**/*"
  ]
}